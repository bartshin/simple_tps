Shader "Unlit/Grow"
{
  Properties
  {
    _AnimateValues("Animate Values", Vector) = (0, 0, 0, 0)
    _Color("Color", Vector) = (1, 1, 1, 1)
  }
  SubShader
  {
    Tags {
      "Queue"="Transparent"
    }
    Blend SrcAlpha OneMinusSrcAlpha

    LOD 100

      Pass
      {
        CGPROGRAM
// Upgrade NOTE: excluded shader from DX11; has structs without semantics (struct v2f members alpha)
#pragma exclude_renderers d3d11
        #pragma vertex vert
        #pragma fragment frag
        
        #include "UnityCG.cginc"

        struct appdata
        {
          float4 vertex : POSITION;
          float2 uv : TEXCOORD0;
        };

        struct v2f
        {
          float2 uv : TEXCOORD0;
          float4 vertex : SV_POSITION;
        };

        sampler2D _MainTexture;
        float4 _AnimateValues;
        float4 _Color;
        float lineWidth = 0.1f;

        v2f vert (appdata v)
        {
          v2f o;
          o.vertex = UnityObjectToClipPos(v.vertex);
          o.uv = v.uv;
          //o.uv = (o.uv - fixed2(0.5, 0.5)) * _AnimateValues.x + fixed2(0.5, 0.5);
          //o.uv -= fixed2(_AnimateValues.y, _AnimateValues.z);
          return o;
        }

        fixed4 frag (v2f i) : SV_Target
        {
          float dist = distance(i.uv, fixed2(0.5, 0.5));
          fixed4 color = _Color;
          color.w = step(1.0 - abs(dist - _AnimateValues.x), 0.1);
          return color;
        }
        ENDCG
      }
  }
}
